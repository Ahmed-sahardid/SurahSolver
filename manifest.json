{
  "manifest_version": 3,
  "name": "Surah Solver",
  "version": "1.0",
  "description": "Get matched with a Surah after solving a LeetCode problem — plus your Surah‑dex on every page!",
  "permissions": [
    "storage",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "https://leetcode.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": [
        "quran_data.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon128.png",
        "icons/suras/al-asr.png",
        "icons/suras/an-nas.png",
        "icons/suras/yasin.png",
        "icons/suras/al-baqarah.png"
      ],
      "matches": ["https://leetcode.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
